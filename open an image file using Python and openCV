import cv2
filePath="https://www.google.iq/url?sa=i&rct=j&q=&esrc=s&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwiBoduP3frbAhURCuwKHV7KAAAQjRx6BAgBEAU&url=http%3A%2F%2Fbdfjade.com%2Fpictures.html&psig=AOvVaw2GTQn4PK1H4KcEWgvC9yNj&ust=1530425303630136"
img=cv2.imread(filePath)
cv2.imshow("Picture Loader",img)
cv2.waitKey(0)
cv2.destroyAllWindows()
